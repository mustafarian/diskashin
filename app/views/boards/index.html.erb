<h1>Boards</h1>

<div class="table-responsive">
  <table class="table boards-table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @boards.each do |board| %>
        <tr>
          <td style="width: 30%"><%= board.title %></td>
          <td style="width: 50%"><%= board.description %></td>
          <td style="width: 5%"><%= link_to 'Show', board %></td>
          <td style="width: 5%"><%= link_to 'Edit', edit_board_path(board) %></td>
          <td style="width: 5%"><%= link_to 'Destroy', board, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>

<% if current_user %>
    <%= link_to 'New Board', new_board_path, class: "btn btn-default" %>
<% end %>