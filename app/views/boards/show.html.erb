<p>
<h2><%= @board.title %><br>
  <small><%= @board.description %></small>
</h2>
</p>
<br>
<% if !@board.parent %>
    <h3>Sub-Boards</h3>
    <%= render 'board_list', boards: @board.sub_boards %>
    <br>
<% else %>
    <% if current_user %>
        <%= link_to 'New Thread', new_discussion_thread_path(:board_id => @board.id), :class => "btn btn-primary" %>
        <br>
    <% end %>
    <br>
    <%= render 'discussion_threads/thread_list', threads: @threads %>
<% end %>
<br>
<%= link_to 'Back', boards_path %>
