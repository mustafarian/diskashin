<div class="page-header">
  <h1>Login</h1>
</div>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <%= form_tag(sessions_path, {:class => "form-horizontal"}) do %>
        <div class='form-group'>
          <%= label_tag :username, nil, class: 'control-label col-sm-2' %>
          <div class='col-sm-10'>
            <%= text_field_tag :username, params[:email], class: "form-control" %>
          </div>
        </div>

        <div class='form-group'>
          <%= label_tag :password, nil, class: 'control-label col-sm-2' %>
          <div class='col-sm-10'>
            <%= password_field_tag :password, nil, class: "form-control" %>
          </div>
        </div>

        <%= submit_tag 'Log In', class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>