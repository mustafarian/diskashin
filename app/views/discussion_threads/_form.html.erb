<div class="panel">
  <%= form_for(@discussion_thread, :html => {:class => 'form-horizontal', :role => "form", multipart: true}) do |f| %>
      <% if discussion_thread.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(discussion_thread.errors.count, "error") %> prohibited this discussion_thread from being
              saved:</h2>

            <ul>
              <% discussion_thread.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.text_area :body, rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 text-right">
          <%= f.label "Upload Images", :class => 'control-label' %>
        </div>
        <div class="col-sm-8">
          <%= file_field_tag 'attachments[]', type: :file, multiple: true, accept: 'image/png,image/gif,image/jpeg' %>
        </div>
      </div>

      <%= f.hidden_field :board_id, :value => @board_id %>

      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
  <% end %>
</div>