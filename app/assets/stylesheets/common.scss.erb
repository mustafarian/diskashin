.purr {
  position: fixed;
  top: 30px;
  right: 100px;
  width: 250px;
  padding: 20px;
  background-color: #FCC;
  border: solid 2px #C66;
  &:first-letter { text-transform: uppercase; }
}

.best_in_place:hover, #user_account .do_hover {
  padding-right: 1.5em;
  background: url(<%= asset_path "red_pen.png" %>) no-repeat right;
  background-color: #CCC;
}

.preview {
  height: 100px;
}

.thumbnail a > img {
  display: block;
  max-width: 100%;
  max-height: 100%;
  margin-left: auto;
  margin-right: auto;
}

.thumbnail .preview > img {
  display: block;
  max-width: 100%;
  max-height: 100%;
  margin-left: auto;
  margin-right: auto;
}

.files .span3 {
  width: 220px;
}

.files .span3 .thumbnail {
  height: 220px;
  width: 220px;
  margin:0 auto;
}

.progress {
  height: 8px;
  margin-top: 10px;
}
.progress-success.progress-striped .bar {
  background-color: #7D7D7D;
}

img {
  max-width: none;
}
